@page "/"
@rendermode InteractiveServer
@inject AccountApiClient Api
@inject NavigationManager Navigation

<PageTitle>Dashboard - Wallet App</PageTitle>

@if (_loading)
{
    <LoadingSpinner />
}
else if (_error is not null)
{
    <ErrorAlert Message="@_error" />
}
else
{
    <div class="space-y-6">
        <!-- Summary cards -->
        <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3" role="list" aria-label="Account summary">
            <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6 dark:bg-gray-800" role="listitem">
                <dt class="truncate text-sm font-medium text-gray-500 dark:text-gray-400">Total Accounts</dt>
                <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900 dark:text-white">@_accounts.Count</dd>
            </div>
            <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6 dark:bg-gray-800" role="listitem">
                <dt class="truncate text-sm font-medium text-gray-500 dark:text-gray-400">Total Balance</dt>
                <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900 dark:text-white">@TotalBalance.ToString("N2")</dd>
            </div>
            <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6 dark:bg-gray-800 sm:col-span-2 lg:col-span-1" role="listitem">
                <dt class="truncate text-sm font-medium text-gray-500 dark:text-gray-400">Quick Actions</dt>
                <dd class="mt-2">
                    <a href="/accounts/open"
                       class="inline-flex items-center rounded-md bg-primary-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
                       aria-label="Open a new account">
                        Open New Account
                    </a>
                </dd>
            </div>
        </div>

        <!-- Accounts table -->
        <div class="overflow-hidden bg-white shadow sm:rounded-lg dark:bg-gray-800">
            <div class="px-4 py-5 sm:px-6">
                <h2 class="text-lg font-medium text-gray-900 dark:text-white">Your Accounts</h2>
                <p class="mt-1 max-w-2xl text-sm text-gray-500 dark:text-gray-400">Overview of all your bank accounts.</p>
            </div>
            @if (_accounts.Count == 0)
            {
                <div class="px-4 py-12 text-center sm:px-6">
                    <svg class="mx-auto h-12 w-12 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Z" />
                    </svg>
                    <h3 class="mt-2 text-sm font-semibold text-gray-900 dark:text-white">No accounts</h3>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by opening a new account.</p>
                    <div class="mt-6">
                        <a href="/accounts/open"
                           class="inline-flex items-center rounded-md bg-primary-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
                            Open Account
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700" aria-label="Accounts list">
                        <thead class="bg-gray-50 dark:bg-gray-700">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500 dark:text-gray-300">Account ID</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500 dark:text-gray-300">Currency</th>
                                <th scope="col" class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider text-gray-500 dark:text-gray-300">Balance</th>
                                <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200 bg-white dark:divide-gray-700 dark:bg-gray-800">
                            @foreach (var account in _accounts)
                            {
                                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 cursor-pointer" @onclick="() => ViewAccount(account.AccountId)">
                                    <td class="whitespace-nowrap px-6 py-4 text-sm font-medium text-gray-900 dark:text-white">
                                        @account.AccountId.ToString()[..8]...
                                    </td>
                                    <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-500 dark:text-gray-400">
                                        <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800 dark:bg-blue-900/30 dark:text-blue-300">
                                            @account.Currency
                                        </span>
                                    </td>
                                    <td class="whitespace-nowrap px-6 py-4 text-right text-sm font-medium @(account.CurrentBalance >= 0 ? "text-green-600 dark:text-green-400" : "text-red-600 dark:text-red-400")">
                                        @account.CurrentBalance.ToString("N2") @account.Currency
                                    </td>
                                    <td class="whitespace-nowrap px-6 py-4 text-right text-sm font-medium">
                                        <a href="@($"/accounts/{account.AccountId}")"
                                           class="text-primary-600 hover:text-primary-900 dark:text-primary-400 dark:hover:text-primary-300"
                                           aria-label="@($"View account {account.AccountId.ToString()[..8]}")">
                                            View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
}

@code {
    private List<AccountModel> _accounts = [];
    private bool _loading = true;
    private string? _error;

    private decimal TotalBalance => _accounts.Sum(a => a.CurrentBalance);

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _accounts = await Api.GetAccountsAsync();
        }
        catch (Exception ex)
        {
            _error = $"Failed to load accounts: {ex.Message}";
        }
        finally
        {
            _loading = false;
        }
    }

    private void ViewAccount(Guid accountId)
    {
        Navigation.NavigateTo($"/accounts/{accountId}");
    }
}
