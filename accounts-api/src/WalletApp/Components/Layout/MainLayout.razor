@inherits LayoutComponentBase
@inject IJSRuntime JS

<div class="min-h-full">
    <nav class="bg-primary-700 dark:bg-primary-900" role="navigation" aria-label="Main navigation">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="flex h-16 items-center justify-between">
                <div class="flex items-center">
                    <a href="/" class="flex-shrink-0" aria-label="Wallet App Home">
                        <svg class="h-8 w-8 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a2.25 2.25 0 0 0-2.25-2.25H15a3 3 0 1 1-6 0H5.25A2.25 2.25 0 0 0 3 12m18 0v6a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 18v-6m18 0V9M3 12V9m18 0a2.25 2.25 0 0 0-2.25-2.25H5.25A2.25 2.25 0 0 0 3 9m18 0V6a2.25 2.25 0 0 0-2.25-2.25H5.25A2.25 2.25 0 0 0 3 6v3" />
                        </svg>
                    </a>
                    <div class="hidden md:block">
                        <div class="ml-10 flex items-baseline space-x-4">
                            <NavLink href="/" class="rounded-md px-3 py-2 text-sm font-medium text-white hover:bg-primary-600 dark:hover:bg-primary-800" Match="NavLinkMatch.All" ActiveClass="bg-primary-800 dark:bg-primary-950" aria-current="page">
                                Dashboard
                            </NavLink>
                            <NavLink href="/accounts/open" class="rounded-md px-3 py-2 text-sm font-medium text-primary-200 hover:bg-primary-600 hover:text-white dark:hover:bg-primary-800" ActiveClass="bg-primary-800 dark:bg-primary-950 !text-white">
                                Open Account
                            </NavLink>
                        </div>
                    </div>
                </div>
                <div class="flex items-center">
                    <button type="button"
                            @onclick="ToggleTheme"
                            class="rounded-md p-2 text-primary-200 hover:bg-primary-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary-700"
                            aria-label="Toggle dark mode">
                        @if (_isDarkMode)
                        {
                            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
                            </svg>
                        }
                        else
                        {
                            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z" />
                            </svg>
                        }
                    </button>

                    <!-- Mobile menu button -->
                    <button type="button"
                            @onclick="ToggleMobileMenu"
                            class="ml-2 inline-flex items-center justify-center rounded-md p-2 text-primary-200 hover:bg-primary-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary-700 md:hidden"
                            aria-controls="mobile-menu"
                            aria-expanded="@_mobileMenuOpen"
                            aria-label="Open main menu">
                        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                            @if (_mobileMenuOpen)
                            {
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                            }
                            else
                            {
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                            }
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        @if (_mobileMenuOpen)
        {
            <div class="md:hidden" id="mobile-menu" role="menu">
                <div class="space-y-1 px-2 pb-3 pt-2 sm:px-3">
                    <NavLink href="/" class="block rounded-md px-3 py-2 text-base font-medium text-white hover:bg-primary-600" Match="NavLinkMatch.All" ActiveClass="bg-primary-800" role="menuitem">
                        Dashboard
                    </NavLink>
                    <NavLink href="/accounts/open" class="block rounded-md px-3 py-2 text-base font-medium text-primary-200 hover:bg-primary-600 hover:text-white" ActiveClass="bg-primary-800 !text-white" role="menuitem">
                        Open Account
                    </NavLink>
                </div>
            </div>
        }
    </nav>

    <header class="bg-white shadow dark:bg-gray-800" role="banner">
        <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
            <h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white">
                Wallet
            </h1>
        </div>
    </header>

    <main role="main">
        <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
            @Body
        </div>
    </main>
</div>

@code {
    private bool _isDarkMode;
    private bool _mobileMenuOpen;
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var theme = await JS.InvokeAsync<string>("themeManager.getTheme");
            _isDarkMode = theme == "dark";
            StateHasChanged();
        }
    }

    private async Task ToggleTheme()
    {
        _isDarkMode = !_isDarkMode;
        await JS.InvokeVoidAsync("themeManager.setTheme", _isDarkMode ? "dark" : "light");
    }

    private void ToggleMobileMenu()
    {
        _mobileMenuOpen = !_mobileMenuOpen;
    }
}
